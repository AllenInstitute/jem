{
    "type": "object",
    "title":"JSON Electrophysiology Metadata (JEM)",
    "properties": {
        "formVersion": {
            "type":"string",
            "title":"Version",
            "readonly":true
        },
        "rigOperator": {
            "type": "string",
            "title": "Researcher",
            "enum":["brianle", "kristenh", "rustym", "ramr", "sarav", "balreetp", "stephanies", "lisak", "jessicat", "jonathant", "briank", "cristinar", "lindsayn"],
            "required":true
        },
        "rigNumber": {
            "type":"string",
            "title":"Rig #",
            "enum":["1", "2", "3", "4", "5", "6", "7", "8", "HCT1", "HCT2", "HCT3", "MP1", "MP2", "MP3", "MP4"],
            "required":true
        },
        "date":{
            "format":"date",
            "title":"Slice on Rig Date/Time",
            "required":true
        },
        "acsfProductionDate":{
            "format":"date",
            "title":"ACSF Date",
            "required":true
        },
        "blankFillDate":{
            "format":"date",
            "title":"Blank Fill Date",
            "enum":["2021-04-06", "2021-03-15", "2021-02-01", "2021-01-04"],
            "required":true
        },
        "internalFillDate":{
            "format":"date",
            "title":"Internal Fill Date",
            "enum":["2021-04-19", "2021-03-08", "2021-01-25"],
            "required":true
        },
        "limsSpecName": {
            "type": "string",
            "title":"Slice ID",
            "required":true
        },
        "virus_enhancer": {
            "type": "string",
            "title": "Virus/Enhancer",
            "enum": ["CN1244", "CN1390", "CN1633", "CN1818", "CN1827", "CN1954", "CN1955", "CN2039", "CN2040", "CN2315", "CN2321"],
            "required": false
        },
        "sliceQuality":{
            "type":"string",
            "enum": ["Healthy", "Unhealthy", "Even Thickness", "Uneven Thickness", "Damage (Tissue Processing)"],
            "default":[],
            "required":true
        },
        "sliceQualityFinal":{
            "type":"string",
            "enum": ["Healthy", "Unhealthy", "Wave of Death (within 30 min)", "Wave of Death (after 30 min)", "Damage (Researcher)"],
            "default":[],
            "required":true
                                },
        "sliceNotes":{
            "type":"string",
            "format":"string",
            "title":"Extra Slice Notes",
            "required":false
        },
        "pipettes":{
            "type":"array",
            "items":{
                "title":"Patch-Seq Pipette",
                "type":"object",
                "properties":{
                    "approach": {
                        "type":"object",
                        "title": "Approach Info",
                        "properties": {
                            "creCell": {
                                "type":"string",
                                "title":"Reporter Status",
                                "enum":["Postive", "Negative", "NA"],
                                "required":true
                            },
                            "cellHealth":{
                                "type":"string",
                                "title": "Cell Health",
                                "enum":["1", "3", "5"],
                                "required":true
                            },
                            "pilotName":{
                                "type":"string",
                                "title":"Pilot Name",
                                "default": "None",
                                "enum": ["None", "Training", "U01 Pilot", "Dravet Mouse Pilot", "Slice_Culture", "Channel_Recording", "Vortexing", "Electroporation", "Nucleated Patch - Retraction Pressure"],
                                "required":true
                            },
                            "pilot_nucleated_patch_retraction_pressure":{
                                "type":"string",
                                "title":"Pilot Details",
                                "enum":["Standard (~80 mbar)", "Mid-Range (~65 mbar)", "Low (~50 mbar)", "Minimal (~25 mbar)"],
                                "default":"",
                                "dependencies":"pilotName",
                                "required":false
                            },
                             "pilot_electroporation":{
                               "type":"string",
                                "title":"Pilot Details",
                                "dependencies":"pilotName",
                                "required":false
                            },
                            "pilot_vortexing":{
                               "type":"string",
                                "title":"Pilot Details",
                                "enum":["Yes", "No"],
                                "dependencies":"pilotName",
                                "required":false
                            },
                             "pilot_channel_recording":{
                               "type":"array",
                                "title":"Pilot Details",
                                "enum":["Total", "Prepulse", "Sustained", "Inactivation"],
                                "dependencies":"pilotName",
                                "required":false
                            }
                        }
                    },
                    "recording":{
                        "type":"object",
                        "title":"Recording Info",
                        "properties": {
                            "timeStart": {
                                "format":"time",
                                "title":"Approach Start",
                                "required":true
                            },
                            "pipetteR":{
                                "format":"number",
                                "minimum": 2.0,
                                "maximum": 8.0, 
                                "title":"Pipette R",
                                "required":true
                            },
                            "timeWholeCellStart":{
                                "format":"time",
                                "title":"Whole Cell Start",
                                "required":true
                            }
                        }
                    },
                    "status":{
                        "type":"string",
                        "title":"Was recording successful?",
                        "enum":["SUCCESS", "FAILURE"],
                        "default":[],
                        "required":true
                    },
                    "pipetteSpecName": {
                        "type": "string",
                        "title":"Pipette Specimen ID",
                        "required":false
                    },
                    "failureNotes":{
                        "type":"string",
                        "enum":["Failed Gigaohm Seal", "Failed Break-in", "Cell Died", "Pipette Issue (clog)", "Pipette Issue (crashed through tissue)", "Access Resistance (>= 20 MOhms)", "Unstable Baseline", "Unstable Holding Current (>= -100 pA)", "Other"],
                        "default":[],
                        "dependencies":"status",
                        "required":true
                    },
                    "freeFailureNotes":{
                        "type":"string",
                        "title":"Extra Failure Notes",
                        "default":[],
                        "dependencies":"status",
                        "required":false
                    },
                    "successNotes":{
                        "type":"string",
                        "enum": ["Completed Core 1", "Completed Core 2", "Difficult Gigaohm Seal (slow sealing)", "Difficult Break-in (re-sealing)", "Access Resistance (>= 20 MOhms)", "Unstable Baseline", "Unstable Holding Current (>= 100 pA)", "Other"],
                        "default":[],
                        "dependencies":"status",
                        "required": true
                    },
                    "qcNotes":{
                        "type":"string",
                        "title":"QC Notes",
                        "dependencies":"status",
                        "required":false
                    },
                    "extraction":{
                        "type":"object",
                        "title":"Extraction Info",
                        "dependencies":"status",
                        "properties":{
                            "pilotNameExtra": {
                                "type":"string",
                                "readonly":true
                            },
                            "pressureApplied":{
                                "type":"number",
                                "title":"Extraction Pressure (mbar)",
                                "required":true,
                                "default": ["-"]
                            },
                            "retractionPressureApplied":{
                                "type":"number",
                                "title":"Retraction Pressure (mbar)",
                                "required":true,
                                "default": ["-"]
                            },
                            "timeExtractionStart":{
                                "format":"time",
                                "title":"Extraction Start Time",
                                "required":true
                            },
                            "timeExtractionEnd":{
                                "format":"time",
                                "title":"Extraction End Time",
                                "required":true
                            },
                            "timeRetractionEnd":{
                                "format":"time",
                                "title":"Retraction End Time",
                                "required":true
                            },
                            "timeChannelRecordingEnd":{
                                "format":"time",
                                "title":"Channel Rec End Time",
                                "required":false,
                                "dependencies":"pilotNameExtra"
                            },
                            "postPatch":{
                                "type":"string",
                                "title":"Post Patch State",
                                "enum":["nucleus_present", "nucleus_absent", "entire_cell", "unknown"],
                                "default":[],
                                "required":true
                            },
                            "nucleus": {
                                "type":"string",
                                "title":"Nucleus sucked in?",
                                "enum":["intentionally", "not_intentionally", "no", "unknown", "NA"],
                                "default":["unknown"],
                                "required": true
                            },
                            "endPipetteR":{
                                "format": "number",
                                "minimum": 0,
                                "maximum": 10000,
                                "title": "Post Patch Pipette R (MOhm)",
                                "required": true
                            },
                            "tubeID":{
                                "type":"string",
                                "title":"Patched Cell Container",
                                "required":true
                            },
                            "fillquality": {
                                "type":"string",
                                "title":"Biocytin fill quality",
                                "enum":["0: No fill or plume", "1: low visibility of the fill (heavily truncated or fill leaking)", "2: medium visibility of the fill (some truncations with some intact dendrites)", "3: high visibility of the fill (no or very little truncations with intact dendrites)"],
                                "default":[],
                                "required":true
                            },
                            "extractionNotes": {
                                "type": "string",
                                "title": "Extra Extraction Notes"
                            }
                        }
                    },
                    "depth": {
                        "format":"number",
                        "minimum": 0.0,
                        "maximum": 350.0,
                        "title":"Cell Depth",
                        "required":true
                    },
                    "autoRoi":{
                        "type":"string",
                        "title": "ROI (Pinning Tool)",
                        "required":false,
                        "default":"None"
                    },
                    "manualRoi":{
                        "type":"string",
                        "title": "ROI",
                        "required":true
                     }
                }
            }
        }
    },
    "dependencies": {
        "pilot_nucleated_patch_retraction_pressure":["pilotName"],
        "pilot_electroporation":["pilotName"],
        "pilot_vortexing":["pilotName"],
        "pilot_channel_recording": ["pilotName"],
        "failureNotes":["status"],
        "freeFailureNotes":["status"],
        "successNotes":["status"],
        "qcNotes":["status"],
        "extraction":["status"]
        }
}
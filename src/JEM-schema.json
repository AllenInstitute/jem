{
    "type": "object",
    "title":"JSON Electrophysiology Metadata (JEM)",
    "properties": {
        "formVersion": {
            "type":"string",
            "title":"Version",
            "readonly":true
        },
        "rigOperator": {
            "type": "string",
            "title": "Researcher",
            "enum":["brianle", "kristenh", "rustym", "ramr", "sarav", "stephanies", "lisak", "jessicat", "jonathant", "briank", "cristinar", "lindsayn"],
            "required":true
        },
        "rigNumber": {
            "type":"string",
            "title":"Rig #",
            "enum":["1", "2", "3", "4", "5", "6", "7", "8", "BRL", "HCT1", "HCT2", "HCT3", "MP1", "MP2", "MP3", "MP4", "NA"],
            "required":true
        },
        "date":{
            "format":"date",
            "title":"Slice on Rig Date/Time",
            "required":true
        },
        "limsSpecName": {
            "type": "string",
            "title":"Slice ID",
            "required":true
        },
        "acsfProductionDate":{
            "format":"date",
            "title":"ACSF Date",
            "required":true
        },
        "blankFillDate":{
            "format":"date",
            "title":"Blank Fill Date",
            "enum":["2021-03-15", "2021-02-01", "2021-01-04"],
            "required":true
        },
        "internalFillDate":{
            "format":"date",
            "title":"Internal Fill Date",
            "enum":["2021-03-08", "2021-01-25"],
            "required":true
        },
        "flipped": {
            "type":"string",
            "title":"Is slice flipped?",
            "enum":["Yes", "No", "Unknown", "NA"],
            "required":true
        },
        "sliceQuality":{
            "type":"string",
            "enum": ["Healthy", "Unhealthy", "Even Thickness", "Uneven Thickness", "Damaged", "Wave of Death (30 min)"],
            "default":["Healthy", "Even Thickness"],
            "required":true
        },
        "sliceNotes":{
            "type":"string",
            "format":"string",
            "title":"Extra Slice Notes",
            "required":false
        },
        "pipettes":{
            "type":"array",
            "items":{
                "title":"Patch-Seq Pipette",
                "type":"object",
                "properties":{
                    "approach": {
                        "type":"object",
                        "title": "Approach Info",
                        "properties": {
                            "sliceHealth":{
                                "type":"string",
                                "title": "Slice Health",
                                "enum":["1", "2", "3", "4", "5"],
                                "required":true
                            },
                            "cellHealth":{
                                "type":"string",
                                "title": "Cell Health",
                                "enum":["1", "2", "3", "4", "5"],
                                "required":true
                            },
                            "creCell": {
                                "type":"string",
                                "title":"Cre Status",
                                "enum":["Cre+", "Cre-", "NA"],
                                "required":true
                            },
                            "pilotName":{
                                "type":"string",
                                "title":"Pilot Name",
                                "default": "None",
                                "enum": ["None", "U01 Pilot", "Tissue_Touch", "Slice_Culture", "Vortexing", "Electroporation", "Channel_Recording", "Non_Human_Primate_LGN", "Nucleated Patch - Retraction Pressure"],
                                "required":true
                            },
                            "pilotTest01":{
                                "type":"string",
                                "title":"Pilot Details",
                                "enum":["Standard (~80 mbar)", "Mid-Range (~65 mbar)", "Low (~50 mbar)", "Minimal (~25 mbar)"],
                                "default":"",
                                "dependencies":"pilotName",
                                "required":false
                            },
                             "pilotTest04":{
                               "type":"string",
                                "title":"Pilot Details",
                                "dependencies":"pilotName",
                                "required":false
                            },
                            "pilotTestYN":{
                               "type":"string",
                                "title":"Pilot Details",
                                "enum":["Yes", "No"],
                                "dependencies":"pilotName",
                                "required":false
                            },
                             "pilotTest05":{
                               "type":"array",
                                "title":"Pilot Details",
                                "enum":["Total", "Prepulse", "Sustained", "Inactivation"],
                                "dependencies":"pilotName",
                                "required":false
                            }
                        }
                    },
                    "recording":{
                        "type":"object",
                        "title":"Recording Info",
                        "properties": {
                            "timeStart": {
                                "format":"time",
                                "title":"Approach Start",
                                "required":true
                            },
                            "pipetteR":{
                                "format":"number",
                                "minimum": 0.0,
                                "maximum": 10.0, 
                                "title":"Pipette R",
                                "required":true
                            },
                            "timeWholeCellStart":{
                                "format":"time",
                                "title":"Whole Cell Start",
                                "required":true
                            },
                            "humanCellTypePrediction":{
                                "type":"string",
                                "title":"Cell Type Prediction (for Human Neurons)",
                                "enum":[],
                                "required":false
                            }
                        }
                    },
                    "status":{
                        "type":"string",
                        "title":"Was recording successful?",
                        "enum":["SUCCESS", "FAILURE"],
                        "default":[],
                        "required":true
                    },
                    "pipetteSpecName": {
                        "type": "string",
                        "title":"Pipette Specimen ID",
                        "required":false
                    },
                    "failureNotes":{
                        "type":"string",
                        "enum":["Failed Gigaohm Seal", "Failed Break-in", "Cell Died", "Access Resistance (>= 20 MOhms)", "Resting Membrane Potential (< -60 mV to -80 mV >)", "Unstable Baseline", "Unstable Holding Current (>= -100 pA)", "Other"],
                        "default":[],
                        "dependencies":"status",
                        "required":true
                    },
                    "freeFailureNotes":{
                        "type":"string",
                        "title":"Extra Failure Notes",
                        "default":[],
                        "dependencies":"status",
                        "required":false
                    },
                    "successNotes":{
                        "type":"string",
                        "enum": ["Completed Core 1", "Completed Core 2", "Access Resistance (>= 20 MOhms)", "Unstable Baseline", "Unstable Holding Current (>= -100 pA)"],
                        "default":["Completed Core 1"],
                        "dependencies":"status",
                        "required":false
                    },
                    "qcNotes":{
                        "type":"string",
                        "title":"QC Notes",
                        "dependencies":"status",
                        "required":false
                    },
                    "badSweeps":{
                        "type":"string",
                        "title":"Bad Sweeps",
                        "dependencies":"status",
                        "required":false
                    },
                    "extraction":{
                        "type":"object",
                        "title":"Extraction Info",
                        "dependencies":"status",
                        "properties":{
                            "pilotNameExtra": {
                                "type":"string",
                                "readonly":true
                            },
                            "pressureApplied":{
                                "type":"number",
                                "title":"Extraction Pressure (mbar)",
                                "required":true
                            },
                            "retractionPressureApplied":{
                                "type":"number",
                                "title":"Retraction Pressure (mbar)",
                                "required":true
                            },
                            "timeExtractionStart":{
                                "format":"time",
                                "title":"Extraction Start Time",
                                "required":true
                            },
                            "timeExtractionEnd":{
                                "format":"time",
                                "title":"Extraction End Time",
                                "required":true
                            },
                            "timeRetractionEnd":{
                                "format":"time",
                                "title":"Retraction End Time",
                                "required":true
                            },
                            "timeChannelRecordingEnd":{
                                "format":"time",
                                "title":"Channel Rec End Time",
                                "required":false,
                                "dependencies":"pilotNameExtra"
                            },
                            "postPatch":{
                                "type":"string",
                                "title":"Post Patch State",
                                "enum":["nucleus_present", "nucleus_absent", "entire_cell"],
                                "default":[],
                                "required":true
                            },
                            "endPipetteR":{
                                "format":"number",
                                "minimum":0,
                                "title":"Post Patch Pipette R",
                                "required":true
                            },
                            "nucleus": {
                                "type":"string",
                                "title":"Nucleus sucked in?",
                                "enum":["intentionally", "not_intentionally", "no", "NA"],
                                "default":[],
                                "required":false
                            },
                            "fillquality": {
                                "type":"string",
                                "title":"Biocytin fill quality",
                                "enum":["0: No fill or plume", "1: low visibility of the fill (heavily truncated or fill leaking)", "2: medium visibility of the fill (some truncations with some intact dendrites)", "3: high visibility of the fill (no or very little truncations with intact dendrites)"],
                                "default":[],
                                "required":true
                            },
                            "tubeID":{
                                "type":"string",
                                "title":"Patched Cell Container",
                                "required":true
                            },
                            "extractionNotes": {
                                "type": "string",
                                "title": "Extra Extraction Notes"
                            },
                            "extractionObservations":{
                                "type":"string",
                                "title": "Cell Assessment",
                                "enum": ["Cell Swelled", "Cell Shrunk"],
                                "default": [],
                                "required":false
                            },
                            "sampleObservations":{
                                "type":"string",
                                "title":"Sample Assessment",
                                "enum":["No Bubbles", "Small Bubbles", "Medium Bubbles", "Large Bubbles", "Solution in Pipette Shank"],
                                "default":[],
                                "required":false
                            }
                        }
                    },
                    "depth": {
                        "format":"number",
                        "title":"Cell Depth",
                        "required":true
                    },
                    "autoRoi":{
                        "type":"string",
                        "title": "ROI (Pinning Tool)",
                        "required":false,
                        "default":"None"
                    },
                    "manualRoi":{
                        "type":"string",
                        "title": "ROI",
                        "required":true
                     }
                }
            }
        }
    },
    "dependencies": {
        "pilotTest01":["pilotName"],
        "pilotTest04":["pilotName"],
        "pilotTestYN":["pilotName"],
        "pilotTest05":["pilotName"],
        "failureNotes":["status"],
        "freeFailureNotes":["status"],
        "successNotes":["status"],
        "qcNotes":["status"],
        "badSweeps":["status"],
        "extraction":["status"]
        }
}